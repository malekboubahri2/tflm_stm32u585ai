{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/firmware.elf",
            "device": "STM32U585AI",
            "configFiles": [
                "${workspaceFolder}/openocd/interface/stlink.cfg",
                "${workspaceFolder}/openocd/target/stm32u5x.cfg"
            ],
            "runToEntryPoint": "main",     
            "preLaunchTask": "Flash",
            "gdbPath": "/opt/arm-gnu-toolchain/bin/arm-none-eabi-gdb",
            "svdFile": "${workspaceFolder}/drivers/CMSIS/Device/ST/STM32U5xx/Include/STM32U585.svd",
            "symbolFiles": [
                "${workspaceFolder}/firmware.elf"
            ],
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 4000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                {
                    "port": 0,
                    "type": "console"
                }
                ]
            }
        }
    ]
}